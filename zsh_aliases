# dotfiles
alias ev='vim ~/dotfiles/vimrc'
alias tm='vim ~/dotfiles/tmux.conf'
alias zrc='vim ~/dotfiles/zshrc'
alias shortcuts='vim ~/dotfiles/zsh_aliases'
alias soshi='source ~/.zsh_aliases'
alias soz='source ~/.zshrc'
alias rmdir='rm -rf'

# list alias
#alias l='ls -alF'
alias l='exa -bghla'
alias la='exa -lh'
alias ll='exa'
alias t='exa -lT'

# tmux alias
alias tmus='tmux new -s'
alias tl='tmux ls'
alias ta='tmux attach -t'

# git alias
alias g='git'
alias gs='git status'
alias ga='git add'
alias gcom='git commit -m'
alias gp='git push origin master'

# php lint
alias phpl='~/phplint-3.0_20160307/phpl'

# python 3
alias python='/usr/local/bin/python3'

# Editor
alias emacs='/usr/local/bin/emacs'
alias vim='/usr/local/bin/vim'

# exit terminal
alias x='exit'

# change to dir
alias dotfiles='cd ~/dotfiles'
alias sites='cd ~/code/sites'

# phpctags
alias phpctags='php ~/phpctags'
